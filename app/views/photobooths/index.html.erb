<%# app/views/photobooths/index.html.erb %>
<div class="container mt-5">
  <div class="text-center mb-5">
    <div data-controller="typing-effect">
      <h1 data-typing-effect-target="text" class="display-4 gold">Location de Photobooths</h1>
      <h3 class="text-light">Découvrez nos photobooths disponibles près de chez vous</h3>
    </div>
  </div>

  <div class="row g-4 mb-4">
    <% @photobooths.each do |p| %>
      <div class="col-md-4">
        <div class="card h-100 shadow-sm">
          <%# Carrousel pour afficher les photos du photobooth %>
          <div id="carousel-<%= p.id %>" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% p.photos.each_with_index do |photo, index| %>
                <div class="carousel-item <%= 'active' if index == 0 %>">
                  <%= image_tag(asset_path(photo.image_url), class: "d-block w-100", alt: p.name) %>
                </div>
              <% end %>
            </div>

            <%# Boutons de navigation du carrousel %>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= p.id %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= p.id %>" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          <%# Contenu du photobooth %>
          <div class="card-body text-center">
            <h5 class="card-title fw-bold gold"><%= p.name %></h5>
            <%= link_to "En savoir plus", photobooth_path(p), class: "btn button mt-3" %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Bouton de chat -->
    <div data-controller="chats-list" style="position: fixed; bottom: 20px; left: 1450px;">
      <button
        id="open-chat"
        style="border: none; background: none; cursor: pointer; z-index: 1050;"
        data-action="click->chats-list#toggleChat">
        <img src="<%= asset_path('chat-icon.png') %>" alt="Chat" style="width: 50px; height: 50px;">
      </button>

      <!-- Overlay pour désactiver les interactions en arrière-plan -->
      <div id="chat-overlay" class="chat-overlay d-none" data-chats-list-target="chatOverlay"></div>

      <!-- Conteneur pour le chat -->
      <div
        class="chatbot text-light d-none"
        style="position: fixed; bottom: 80px; right: 20px; width: 300px; height: 500px; border-radius: 10px; z-index: 9999; background-color: black;"
        data-chats-list-target="chatContainer">
        <h5 class="text-center mt-3">Je suis votre assistant virtuel</h5>
        <div id="questions" style="overflow-y: auto; max-height: 300px; padding: 10px;">
          <%= render partial: "questions/question", collection: @questions %>
        </div>
        <div style="padding: 10px;">
          <%= render "questions/form", question: @question %>
        </div>
      </div>
    </div>
  </div>
</div>
